<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingTop="@dimen/margin_large"
        android:paddingBottom="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_xlarge"
        android:paddingRight="@dimen/margin_xlarge">

        <TextView
            android:id="@+id/tv_dia_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="Fail"
            android:textColor="@color/redColor"
            android:textSize="@dimen/text_heading_1x" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_deny" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_large"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tran_fail_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_heading_2x"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:text="MMK"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_text_fail"
            android:padding="@dimen/margin_medium"
            android:text="Not Enough Money"
            android:textColor="@color/redColor"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular_2x"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_success"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_tran_success_bus_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/greenColor"
                android:gravity="center"
                android:padding="@dimen/margin_medium"
                android:text="21"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_regular_2x" />

            <TextView
                android:id="@+id/tv_tran_success_bus_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/margin_medium"
                android:text="3N/ 1234"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_regular_2x" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_heading_1x"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_dia_OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/colorWhite"
        android:background="@color/secondaryColor"
        android:visibility="visible"
        android:layout_marginTop="@dimen/margin_large"/>


</LinearLayout>